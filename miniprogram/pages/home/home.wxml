<view class="home-container">
  <scroll-view class="todoList" scroll-y="true">
    <view class="item" wx:for="{{lists}}" wx:key="{{item.id}}" wx:for-index="index" bindtap="completeTodo" data-index="{{index}}">
      <view class="select {{item.finished && 'active'}}"></view>
      <text>{{item.description}}</text>
    </view>
  </scroll-view>
  <g-button text="创建任务" type="change" size="mini" bindtap="showInputBox"></g-button>
  <view class="tomato-wrapper">
    <view class="tomato">
      <navigator url="/pages/tomato/tomato">
        <g-clock text="点击开始闹钟"></g-clock>
      </navigator>
    </view>
  </view>
  <g-confirm visible="{{visible}}" placeholder="请输入您完成的内容" bindconfirm="confirmTodo" bindcancel="hideInputBox"></g-confirm>
</view>