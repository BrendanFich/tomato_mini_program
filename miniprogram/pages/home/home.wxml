<view class="home-container">
  <scroll-view class="todoList" scroll-y="true">
    <view class="item" 
      wx:for="{{lists}}" 
      wx:key="{{item.id}}" 
      wx:for-index="index" 
      wx:if="{{!item.completed}}"
    >
      <view class="select {{item.completed && 'active'}}" 
        bindtap="completeTodo" 
        data-index="{{index}}" 
        data-id="{{item.id}}">
      </view>
      <text bindtap="changeText" 
        data-content="{{item.description}}" 
        data-index="{{index}}" 
        data-id="{{item.id}}">{{item.description}}
      </text>
    </view>
  </scroll-view>
  <g-button text="创建任务" type="change" size="mini" bindtap="showAddBox"></g-button>
  <view class="tomato-wrapper">
    <view class="tomato">
      <navigator url="/pages/tomato/tomato">
        <g-clock text="点击开始闹钟"></g-clock>
      </navigator>
    </view>
  </view>
  <g-confirm visible="{{visibleAdd}}" placeholder="请输入您完成的内容" bindconfirm="confirmAdd" bindcancel="hideConfirmBox"></g-confirm>
  <g-confirm visible="{{visibleUpdate}}" placeholder="请填写更新内容" bindconfirm="confirmUpdate" bindcancel="hideConfirmBox" value= "{{changeText}}">{{changeText}}</g-confirm>
</view>