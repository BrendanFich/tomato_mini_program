.login{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100vh;
  background: #EEF7F6;
}
.login .avatar {
  width: 270rpx;
  height: 270rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 12rpx solid #F6705A;
  margin-bottom: 20rpx;
  box-shadow: 0px 11px 32px 0px rgba(246,112,90,0.30);
}
.login .name-wrap{
  color: #F6705A;
  font-size: 38rpx;
  position: relative;
  margin-bottom: 60rpx;
}
.login .name-wrap::after{
  content: "";
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  width: 150rpx;
  height: 4rpx;
  background: #F6705A;
  transform: translateX(-50%);
}

button::after{border: none;}
.button-hover{opacity: 0.6;}
.loginButton{
  width: 360rpx;
  height: 80rpx;
  border-radius: 16rpx;
  color: #fff;
  font-size: 26rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 auto;
  background: linear-gradient(to right, #EF9B75,#F6705A);
  box-shadow: 0px 11px 32px 0px rgba(246,112,90,0.30);
}

.login .binding{
  color: #F6705A;
  font-size: 24rpx;
  margin-top: 40rpx;
}